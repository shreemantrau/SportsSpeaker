<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/btnAikido"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:scaleType="fitCenter"
            android:tag="aikido"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/aikido" />

        <ImageButton
            android:id="@+id/btnJudo"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:scaleType="fitCenter"
            android:tag="judo"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/judo" />

        <ImageButton
            android:id="@+id/btnKickBoxing"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:scaleType="fitCenter"
            android:tag="kickboxing"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/kickboxing" />

        <ImageButton
            android:id="@+id/btnBoxing"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:scaleType="fitCenter"
            android:tag="boxing"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/boxing" />

        <ImageButton
            android:id="@+id/btnTaekwondo"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:scaleType="fitCenter"
            android:tag="taekwondo"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/taekwondo" />

        <ImageButton
            android:id="@+id/btnKarate"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:scaleType="fitCenter"
            android:tag="karate"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/karate" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>